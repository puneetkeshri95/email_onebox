{
  "name": "email-onebox",
  "version": "1.0.0",
  "description": "Feature-Rich Email Onebox - Real-time IMAP synchronization with AI-powered categorization and searchable storage",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/app.js",
    "dev": "nodemon --exec ts-node src/app.ts",
    "watch": "tsc --watch",
    "clean": "rimraf dist",
    "test": "echo \"Error: no test specified\" && exit 1",
    "docker:elasticsearch": "docker run -d --name elasticsearch -p 9200:9200 -p 9300:9300 -e \"discovery.type=single-node\" -e \"ES_JAVA_OPTS=-Xms512m -Xmx512m\" docker.elastic.co/elasticsearch/elasticsearch:8.11.0",
    "docker:chromadb": "docker run -d --name chromadb -p 8000:8000 chromadb/chroma",
    "docker:stop": "docker stop elasticsearch chromadb",
    "docker:remove": "docker rm elasticsearch chromadb",
    "docker:start-all": "npm run docker:elasticsearch && npm run docker:chromadb",
    "setup:env": "powershell -Command \"Copy-Item .env.example .env\"",
    "setup:complete": "npm run setup:env && npm run docker:start-all",
    "postinstall": "npm run build"
  },
  "keywords": [
    "email",
    "imap",
    "elasticsearch",
    "ai",
    "typescript",
    "node.js",
    "real-time",
    "slack",
    "webhook",
    "rag",
    "chromadb"
  ],
  "author": "Email Onebox Team",
  "license": "MIT",
  "devDependencies": {
    "@types/cheerio": "^0.22.35",
    "@types/express-session": "^1.18.2",
    "@types/html-to-text": "^9.0.4",
    "@types/imap": "^0.8.42",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.1.0",
    "@types/nodemailer": "^6.4.17",
    "@types/passport": "^1.0.17",
    "@types/passport-google-oauth20": "^2.0.16",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@azure/msal-node": "^3.6.4",
    "@chroma-core/default-embed": "^0.1.8",
    "@elastic/elasticsearch": "^8.18.2",
    "@google/generative-ai": "^0.24.1",
    "@microsoft/microsoft-graph-client": "^3.0.7",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.0",
    "@types/mailparser": "^3.4.6",
    "@types/multer": "^2.0.0",
    "axios": "^1.11.0",
    "cheerio": "^1.0.0-rc.12",
    "chromadb": "^3.0.10",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^4.19.0",
    "express-session": "^1.18.2",
    "google-auth-library": "^7.14.1",
    "googleapis": "^105.0.0",
    "groq-sdk": "^0.29.0",
    "helmet": "^8.1.0",
    "html-entities": "^2.4.0",
    "html-to-text": "^9.0.5",
    "imap": "^0.8.17",
    "imapflow": "^1.0.191",
    "isomorphic-dompurify": "^2.0.0",
    "mailparser": "^3.7.4",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "node-cron": "^4.2.1",
    "openai": "^5.11.0",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-microsoft": "^2.1.0"
  }
}
